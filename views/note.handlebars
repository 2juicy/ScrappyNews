{{#each articles}}
<div class="center container">
    <h2>{{title}}</h2>
    <p>{{info}}</p>
    <img class="responsive-img" src="{{img}}" alt="No Image Found">
    <div class="row center">
        {{#each articles.note}}
        <h4>{{title}}</h4>
        <p>{{body}}</p>
        <p>{{date}}</p>
        {{/each}}
        <form action="/note/{{_id}}" method="POST">
            <h3>Leave A Comment!</h3>
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input type="text" placeholder="Name" name="title">
            </div>
            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input type="text" placeholder="We would love to hear from you! Leave a comment!" name="body">
            </div>
        </form>
    </div>
    <p>
        <button class='btn btn-large waves-effect waves-light red darken-3 white-text center'>Comment Post</button>
        <a href="http://mmorpg.com/{{link}}" target="_blank">
            <button class='btn btn-large waves-effect waves-light grey darken-3 white-text center'>Read More</button>
        </a>
    </p>
</div>
{{/each}}